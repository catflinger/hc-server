{
    "author": "Paul Drury",
    "license": "ISC",
    "name": "hc-server",
    "version": "0.1.1",
    "description": "Home heating controller",
    "private": true,
    "main": "index.js",
    "scripts": {
        "clean": "rimraf lib",
        "lint": "tslint --force --format verbose \"src/**/*.ts\"",
        "build": "npm run clean && npm run lint && echo Using TypeScript && tsc --version && tsc --pretty",
        "start": "npm run build && ts-node lib/src/index.js",
        "test": "npm run build && mocha --require ts-node/register --recursive \"test/**/*-spec.ts\""
    },
    "dependencies": {
        "inversify": "5.0.1",
        "reflect-metadata": "0.1.12",
        "uuid": "3.3.2"
    },
    "devDependencies": {
        "rimraf": "2.6.2",
        "@types/node": "10.12.18",
        "tslint": "5.12.0",
        "typescript": "3.2.2",
        "ts-node": "7.0.1",
        "mocha": "5.2.0",
        "@types/mocha": "5.2.5",
        "chai": "4.2.0",
        "chai-as-promised": "7.1.1",
        "@types/chai-as-promised": " 7.1.0",
        "@types/chai": "4.1.7",
        "coffeescript": "2.3.2",
        "@types/uuid": "3.4.4"
    }
}
