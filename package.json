    "name": "hc-server",
    "version": "0.1.1",
    "description": "Home heating controller",
    "private": true,
    "main": "index.js",
    "scripts": {
        "clean": "rimraf lib",
        "lint": "tslint --force --format verbose \"src/**/*.ts\"",
        "build": "npm run clean && npm run lint && echo Using TypeScript && tsc --version && tsc --pretty",
        "start": "npm run build && set DEBUG=app,api,error && node -r ts-node/register --trace-warnings lib/src/index.js",
        "test": "npm run build && mocha --exit --require ts-node/register --recursive \"test/**/*-spec.ts\""
    },
    "dependencies": {
        "axios": "^1.6.2",
        "body-parser": "1.18.3",
        "debug": "4.1.1",
        "express": "4.16.4",
        "inversify": "5.0.1",
        "moment": "2.24.0",
        "mysql": "^2.16.0",
        "reflect-metadata": "0.1.12",
        "uuid": "3.3.2"
    },
    "devDependencies": {
        "@types/body-parser": "1.17.0",
        "@types/chai": "4.1.7",
        "@types/chai-as-promised": " 7.1.0",
        "@types/chai-http": "3.0.5",
        "@types/debug": "4.1.5",
        "@types/express": "4.16.0",
        "@types/mocha": "5.2.5",
        "@types/mysql": "^2.15.5",
        "@types/node": "10.12.18",
        "@types/uuid": "3.4.4",
        "chai": "4.2.0",
        "chai-as-promised": "7.1.1",
        "chai-http": "4.2.1",
        "coffeescript": "2.3.2",
        "mocha": "^8.2.1",
        "rimraf": "2.6.2",
        "ts-node": "7.0.1",
        "tslint": "5.12.0",
        "typescript": "3.2.2"
    }
}
